{
    "compilerOptions": {
        "moduleResolution": "nodenext",
        "module": "NodeNext",
        "lib": ["es2022", "dom", "dom.iterable"],
        "strictNullChecks": true,
        "declaration": true,
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2021",
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "composite": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": []
}
  