{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["services/*/src"],
      "@libraries/*": ["libraries/*/src"]
    }
  }
}
